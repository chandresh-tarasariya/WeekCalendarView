<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/header_left_cell_width"
    android:layout_height="@dimen/header_left_cell_height"
    android:background="@drawable/bg_cell_gray"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/header_left_cell_width"
        android:layout_height="@dimen/header_left_cell_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="@dimen/header_left_cell_img_width"
            android:layout_height="@dimen/header_left_cell_img_height"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</LinearLayout>